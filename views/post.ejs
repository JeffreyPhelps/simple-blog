

<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header"><%= showBlog.title %><span id="indexTitleDate"><%= showBlog.created.toDateString() %></span></div>
    <div class="ui top attached">
        <div class="item">
            <img src="<%= showBlog.image %>" id="postImage">
        </div>
        <div class="description">
            <p><%= showBlog.body %></p>
        </div>
        <form action="/<%= showBlog._id %>?_method=DELETE" method="POST">
            <a href="/<%= showBlog._id %>/edit" class="ui black basic button">Edit Post</a>
            <button class="ui red basic button">Delete Post</button>
        </form>
    </div>
</div>

<% include partials/footer %>

